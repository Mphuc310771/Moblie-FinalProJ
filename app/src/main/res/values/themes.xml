<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Material 3) -->
    <style name="Theme.SmartBudget" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status Bar & Navigation -->
        <item name="android:statusBarColor">@color/background</item> <!-- Immersive feel -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Typography -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- UI Component Styles -->

    <!-- Cards (Glassmorphism / Clean) -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>
    
    <style name="HeroCardStyle" parent="CardStyle">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Buttons -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/bg_ai_chat</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- FAB -->
    <style name="FabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">6dp</item>
    </style>

    <!-- Text Input -->
    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeadline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAmount" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bottom Nav -->
    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="elevation">16dp</item>
    </style>
</resources>
