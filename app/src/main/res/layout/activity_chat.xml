<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Quay láº¡i"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– Trá»£ lÃ½ AI"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Smart AI"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Messages List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Quick suggestions -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Láº­p ngÃ¢n sÃ¡ch"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Máº¹o tiáº¿t kiá»‡m"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_analyze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š PhÃ¢n tÃ­ch chi tiÃªu"
                style="@style/Widget.Material3.Chip.Suggestion" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Input area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:elevation="8dp"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_input"
            android:hint="Nháº­p cÃ¢u há»i..."
            android:inputType="text"
            android:imeOptions="actionSend"
            android:padding="12dp"
            android:maxLines="3" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_send"
            app:fabSize="mini"
            app:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
