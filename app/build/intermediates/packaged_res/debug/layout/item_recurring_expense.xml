<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical"
        android:background="@color/surface">

        <!-- Status Indicator -->
        <View
            android:id="@+id/view_status_indicator"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="@color/success" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md">

            <TextView
                android:id="@+id/tv_recurring_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền điện"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_recurring_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ngày 5 hàng tháng"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_caption" />

            <TextView
                android:id="@+id/tv_recurring_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Đang hoạt động"
                android:textColor="@color/success"
                android:textSize="@dimen/text_caption" />
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_recurring_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500,000 ₫"
            android:textColor="@color/expense_color"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
