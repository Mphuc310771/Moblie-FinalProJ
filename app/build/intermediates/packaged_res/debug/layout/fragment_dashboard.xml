<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Konfetti overlay for celebrations -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_screen">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chÃ o,"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_body" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Báº¡n"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Streak Badge -->
            <LinearLayout
                android:id="@+id/streak_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_streak_badge"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_streak_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_streak_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_help"
                android:contentDescription="HÆ°á»›ng dáº«n"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_primary" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/notifications"
                app:tint="@color/text_primary" />
        </LinearLayout>

        <!-- Motivational Quote Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_large"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_ai_chat">

            <TextView
                android:id="@+id/tv_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="ðŸ’° Tiá»n báº¡c lÃ  ngÆ°á»i Ä‘áº§y tá»› tá»‘t..."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic" />
        </androidx.cardview.widget.CardView>

        <!-- Balance Card (Glassmorphism) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/balance_card_height"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_balance_card_adaptive"
                    android:scaleType="centerCrop"
                    android:contentDescription="Balance Background" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#10FFFFFF"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card"
                    android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_balance"
                    android:textColor="@color/text_on_card"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:alpha="0.9" />

                <com.smartbudget.app.utils.GradientTextView
                    android:id="@+id/tv_total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="0 â‚«"
                    android:textColor="@color/text_on_card"
                    android:textSize="@dimen/text_amount_large"
                    android:textStyle="bold"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal">

                    <!-- Income -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/income"
                            android:textColor="@color/text_on_card"
                            android:textSize="@dimen/text_caption"
                            android:textStyle="bold"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tv_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0 â‚«"
                            android:textColor="#059669"
                            android:textSize="@dimen/text_subtitle"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/text_on_card"
                        android:alpha="0.2" />

                    <!-- Expense -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expense"
                            android:textColor="@color/text_on_card"
                            android:textSize="@dimen/text_caption"
                            android:textStyle="bold"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tv_expense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0 â‚«"
                            android:textColor="#DC2626"
                            android:textSize="@dimen/text_subtitle"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Actions Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="âœ¨ Truy cáº­p nhanh"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold" />

        <!-- AI Insight Pill -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_ai_insight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/bg_ai_chat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_gemini_mascot"
                    android:contentDescription="AI" />

                <TextView
                    android:id="@+id/tv_ai_insight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Chi tiÃªu thÃ¡ng nÃ y tháº¥p hÆ¡n 10% so vá»›i thÃ¡ng trÆ°á»›c! ðŸ“‰"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- AI Chat (Blue Theme) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_quick_ai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="#D1E3FF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/bg_ai_chat"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_gemini_mascot"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Trá»£ lÃ½ AI"
                        android:textColor="#1A73E8"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Scan Receipt (Green Theme) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_quick_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="#CEEAD6"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/bg_scan"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_scan_3d"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="QuÃ©t HÄ"
                        android:textColor="#137333"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Savings Goals (Yellow Theme) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_quick_savings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="#FFE082"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/bg_savings"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_savings_3d"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tiáº¿t kiá»‡m"
                        android:textColor="#F39C12"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Spending by Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/by_category"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_this_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_month"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_caption" />
        </LinearLayout>

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_pie_height"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Recent Transactions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <TextView
                android:id="@+id/tv_recent_expenses_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recent_transactions"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_caption" />
        </LinearLayout>

        <!-- Transactions RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_expense" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_xl"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’°"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/no_transactions"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>
